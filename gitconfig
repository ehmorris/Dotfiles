[user]
  name = Edwin Morris
  email = edwin.h.morris@gmail.com
[init]
  templatedir = ~/.git_template
[alias]
  lg = log --oneline --abbrev-commit --all --decorate --color
  shortdiff = !git --no-pager diff --color-words
[core]
  excludesfile = /Users/edwin/.gitignore
  editor = /usr/bin/vim
[advice]
  statusHints = false
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
